digraph {
	Start [label=Start]
	Input [label="Input coefficients $a$, $b$, and $c$"]
	CalcDiscriminant [label="Calculate discriminant $\Delta = b^2 - 4ac$"]
	CheckDiscriminant [label="Check discriminant:
- If $\Delta > 0$, two real roots
- If $\Delta = 0$, one real root
- If $\Delta < 0$, two complex roots"]
	SolveEquation [label="Use quadratic formula $x = \frac{{-b \pm \sqrt{\Delta}}}{{2a}}$ to find roots"]
	DisplayRoots [label="Display roots"]
	End [label=End]
	Start -> Input
	Input -> CalcDiscriminant
	CalcDiscriminant -> CheckDiscriminant
	CheckDiscriminant -> SolveEquation [label="If $\Delta > 0$"]
	CheckDiscriminant -> DisplayRoots [label="If $\Delta = 0$"]
	CheckDiscriminant -> End [label="If $\Delta < 0$"]
	SolveEquation -> DisplayRoots
	DisplayRoots -> End
}
